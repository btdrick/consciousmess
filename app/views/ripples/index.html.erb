<p id="notice"><%= notice %></p>

<%= link_to 'New Ripple', new_ripple_path %>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Message</th>
      <th>Posted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ripples.each do |ripple| %>
      <tr>
        <td><%= link_to_if(haswebsite(ripple), ripple.author, { action: "index" }) do
         link_to(ripple.author, ripple.website) end %></td>
        <td><%= ripple.message %></td>
        <td><%= ripple.created_at %></td>
        <td><%= link_to 'Show', ripple %></td>
        <td><%= link_to 'Edit', edit_ripple_path(ripple) %></td>
        <td><%= link_to 'Destroy', ripple, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<nav>
 <a href="/ripples">Newest</a> |
 <a href="/ripples">Previous 10 Ripples</a> |
 <a href="/ripples">Next 10 Ripples</a> |
 <a href="/ripples">Oldest</a>
</nav>
